@model Testgrej.Models.ProfileViewModel

@{
    ViewBag.Title = "Profile";
}
<div>
    <img src=@Model.Image width="200" />
    <h2>@Model.Name, @Model.Age</h2>
    <p>@Model.AboutMe</p>
    <p>@Model.Post</p>
</div>
<a href="/Profile/AddFriend/@Model.Id" class="btn btn-default">Add friend</a>

@using (Html.BeginForm("Index", "Profile", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(m => m.Post, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextAreaFor(m => m.Post, new { @class = "form-control" })
        </div>
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Post" />
        </div>
    </div>
}
